<Window x:Class="WikiFlight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WikiFlight"
        mc:Ignorable="d"
        Title="WikiFlight" Height="800" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="4" FontSize="16" FontWeight="Bold">Connection to simulator</TextBlock>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="4" x:Name="btnConnect" Click="btnConnect_Click">Connect to sim</Button>
            <Button Grid.Column="1" Margin="4" x:Name="btnDisconnect" Click="btnDisconnect_Click">Disconnect from sim</Button>
        </Grid>
        <TextBlock Grid.Row="2" Margin="4" FontSize="16" FontWeight="Bold">Current position</TextBlock>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Margin="4">Latitude:</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="0" Margin="4">Longitude:</TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="1" Margin="4" x:Name="txtLatitude">n/a</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="1" Margin="4" x:Name="txtLongitude">n/a</TextBlock>
        </Grid>
        <TextBlock Grid.Row="4" Margin="4 4 4 0" FontSize="16" FontWeight="Bold">Things nearby</TextBlock>
        <TextBlock Grid.Row="5" FontStyle="Italic" Margin="4">Click to open Wikipedia page in your web browser.</TextBlock>
        <ListView Grid.Row="6" SelectionMode="Single" BorderThickness="0" x:Name="lstPages" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="lstPages_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path=Title}" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" FontWeight="Bold" />
                        <TextBlock Text="{Binding Path=Summary}" TextWrapping="Wrap" MaxHeight="80" TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
